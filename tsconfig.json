{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
       "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "test/*": ["test/*"],
      "ethpm": ["src"],
      "ethpm/*": ["src/*"],
      "types": ["types"],
      "schema": ["types/package-spec"]
    }
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
