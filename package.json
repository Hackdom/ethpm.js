{
  "name": "ethpm",
  "version": "0.1.0",
  "description": "Javascript library for EthPM (EIPs 1123 / 1319)",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "build": "./scripts/build --mode production",
    "watch": "./scripts/build --watch --mode development"
  },
  "keywords": [
    "ethereum",
    "smart-contract",
    "package",
    "packaging"
  ],
  "author": "g. nicholas d'andrea <gnidan@trufflesuite.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "fast-json-stable-stringify": "^2.0.0",
    "fork-ts-checker-webpack-plugin": "^0.4.8",
    "jest": "^23.5.0",
    "jest-webpack-resolver": "^0.3.0",
    "json-schema-to-typescript": "^5.5.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "tsconfig-paths": "^3.5.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "debug": "^3.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "<rootDir>/tsconfig.json",
        "enableTsDiagnostics": true
      }
    },
    "moduleNameMapper": {
      "^ethpm/(.*)": "<rootDir>/src/$1",
      "^ethpm": "<rootDir>/src",
      "^types": "<rootDir>/types"
    },
    "testMatch": [
      "**/test/*.+(ts|js)"
    ]
  },
  "jestWebpackResolver": {
    "webpackConfig": "./webpack.config.js"
  }
}
